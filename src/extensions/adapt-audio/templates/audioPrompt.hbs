{{! make the _globals object in course.json available to this template}}
{{import_globals}}
{{#if _graphic.src}}
<div class="audio-prompt-image">
	<img src="{{_graphic.src}}" aria-hidden="true"/>
</div>
{{/if}}
{{#if promptTitle}}
<div id="notify-heading" class="notify-popup-title">
	<div class="notify-popup-title-inner h5" role="heading" aria-level="1">
		{{{compile promptTitle}}}
	</div>
</div>
{{/if}}
{{#if promptBody}}
<div class="notify-popup-body">
	<div class="notify-popup-body-inner">{{{compile promptBody}}}</div>
</div>
{{/if}}
<div class="notify-popup-buttons">
	<button class="notify-popup-button audio-{{promptButton1Callback}} btn-text notify__btn notify__btn-prompt js-notify-btn-prompt" aria-label="{{promptButton1Text}}">{{{promptButton1Text}}}</button>
	<button class="notify-popup-button audio-{{promptButton2Callback}} btn-text notify__btn notify__btn-prompt js-notify-btn-prompt" aria-label="{{promptButton2Text}}">{{{promptButton2Text}}}</button>
</div>
{{a11y_wrap_focus}}
